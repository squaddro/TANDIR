<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tandir7"
    tools:context="com.squadro.tandir.RecipePageActivity">

    <EditText
        android:id="@+id/listViewText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:text="My Recipes"
        android:textStyle="bold|italic"
        android:textSize="30sp"
        android:textColor="#361c45"
        android:background="@null"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="wrap_content"
        android:layout_height="300dip"
        android:layout_below="@+id/listViewText1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:divider="#000000"
        android:dividerHeight="3dp">
    </ListView>

    <EditText
        android:id="@+id/listViewText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:inputType="none"
        android:text="New Recipes"
        android:textColor="#361c45"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/listView1"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/editTextRecipeDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        android:inputType="text|textMultiLine"
        android:textSize="20sp"
        android:layout_below="@+id/editTextRecipeName" />
    <EditText
        android:id="@+id/editTextRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textStyle="bold"
        android:inputType="text|textMultiLine"
        android:textSize="20sp"
        android:layout_below="@+id/listViewText2"
        />

    <Button
        android:id="@+id/RecipeAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Recipe"
        android:layout_weight="1"
        android:layout_below="@+id/editTextRecipeDesc"
        />

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

</RelativeLayout>
